{
    "compilerOptions": {
        "allowJs": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "experimentalDecorators": true,
        "lib": ["dom", "es2015", "es2017"],
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "paths": {
            "@app/*": [
                "src/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@types/*": [
                "src/models/*"
            ],
            "@templates/*": [
                "src/templates/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ]
        },
        "types": [
            "@types/node",
            "@types/react",
            "@types/react-dom",
            "@types/react-helmet",
            "@types/react-test-renderer",
            "@types/jest"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
